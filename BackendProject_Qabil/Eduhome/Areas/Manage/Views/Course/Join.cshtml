@model List<CourseJoin>
@{
    ViewData["Title"] = "Join";
}

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-action">
                        Joins Table
                        <div class="create-div d-flex j-c-fe">
                            <a asp-action="index" class="btn btn-success">Back to Courses Table</a>
                        </div>
                    </div>
                    <div class="card-content">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>User Name</th>
                                        <th>E-mail</th>
                                        <th>JoinAt</th>
                                        <th>Status</th>
                                        <th>Buttons</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>@item.AppUser.FullName</td>
                                        <td>@item.AppUser.Email</td>
                                        <td>@item.JoinAt?.ToString("HH:mm dd.MM.yyyy")</td>
                                        <td class="text-center">
                                            @if (item.IsAccepting == null)
                                            {
                                                <span style="float:none;margin-left:0px" class="badge badge-warning">Pending</span>
                                            }
                                            else if (item.IsAccepting == true)
                                            {
                                                <span style="float: none; margin-left: 0px" class="badge badge-success">Accepting</span>
                                            }
                                            else
                                            {
                                                <span style="float: none; margin-left: 0px" class="badge badge-danger">Rejecting</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.IsAccepting == null)
                                            {
                                                <a asp-action="joinaccept" asp-route-courseId="@item.CourseId" asp-route-id="@item.Id" class="btn btn-success w-100 mb-1">
                                                    Accept
                                                </a>
                                                <a asp-action="joinreject" asp-route-courseId="@item.CourseId" asp-route-id="@item.Id" class="btn btn-danger w-100">
                                                    Reject
                                                </a>
                                            }
                                            else if (item.IsAccepting == false)
                                            {
                                                <a asp-action="joinaccept" asp-route-courseId="@item.CourseId" asp-route-id="@item.Id" class="btn btn-success w-100 mb-1">
                                                    Accept
                                                </a>
                                            }
                                            else
                                            {
                                                <a asp-action="joinreject" asp-route-courseId="@item.CourseId" asp-route-id="@item.Id" class="btn btn-danger w-100">
                                                    Reject
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

