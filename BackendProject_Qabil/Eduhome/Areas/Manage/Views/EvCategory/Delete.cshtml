@model EventCategory
@{
    ViewData["Title"] = "Delete";
}

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-action">
                        Delete Event Category
                    </div>
                    <div class="card-content">
                        <form class="col s12" method="post">
                            <div class="row">
                                <div class="col s12">
                                    <div class="row m-0">
                                        <div class="input-field col s6">
                                            <input asp-for="Name" class="validate @(Model?.Name!=null?"valid":"")" disabled>
                                            <label asp-for="Name" class="@(Model?.Name!=null?"active":"")">Name</label>
                                            <span class="text-danger" asp-validation-for="Name"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 mb-1">
                                    <h3>Are you sure?</h3>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="waves-effect waves-light btn btn-danger" style="width:200px">Delete</button>
                                    <a asp-action="index" class="waves-effect waves-light btn btn-success" style="width:200px">Cancel</a>
                                </div>
                            </div>
                        </form>
                        <div class="clearBoth"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

