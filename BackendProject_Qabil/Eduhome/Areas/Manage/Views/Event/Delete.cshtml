@model Event
@{
    ViewData["Title"] = "Delete";
}

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-lg-9">
                <div class="card">
                    <div class="card-action">
                        Delete Event
                    </div>
                    <div class="card-content">
                        <form class="col s12" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col s12">
                                    <div class="row">
                                        <div class="col-md-6 col-sm-6">
                                            <div class="card p-1">
                                                <div class="image-poster">
                                                    @if (Model?.Image != null)
                                                    {
                                                        <div class="image-wrapper" style="position:relative">
                                                            <img style="width:100%" src="~/uploads/events/@Model.Image" />
                                                            <input type="hidden" name="Image" value="@Model.Image" />
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <h3 class="mt-2">Have not image</h3>
                                                    }

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row m-0">
                                        <div class="input-field col s5">
                                            <input asp-for="Name" class="validate @(Model?.Name!=null?"valid":"")" disabled>
                                            <label asp-for="Name" class="active">Name</label>
                                            <span class="text-danger" asp-validation-for="Name"></span>
                                        </div>
                                        <div class="input-field col s6">
                                            <select class="form-control form-control-user p-3 validate @(Model?.EventCategoryId!=null?"valid":"")" style="height:65%" asp-for="EventCategoryId" asp-items="@(new SelectList(ViewBag.Categories, "Id","Name"))" disabled>
                                            </select>
                                            <label asp-for="EventCategoryId" class="active">Category</label>
                                            <span class="text-danger" asp-validation-for="EventCategoryId"></span>
                                        </div>
                                        <div class="input-field col s12">
                                            <textarea asp-for="Desc" class="validate @(Model?.Desc!=null?"valid":"")" disabled></textarea>
                                            <label asp-for="Desc" class="@(Model?.Desc!=null?"active":"")">Description</label>
                                            <span class="text-danger" asp-validation-for="Desc"></span>
                                        </div>
                                        <div class="input-field col s5">
                                            <input asp-for="Address" class="validate @(Model?.Address!=null?"valid":"")" disabled>
                                            <label asp-for="Address" class="active">Address</label>
                                            <span class="text-danger" asp-validation-for="Address"></span>
                                        </div>
                                        <div class="input-field col s3">
                                            <input asp-for="StartDate" class="validate @(Model?.StartDate!=null?"valid":"")" disabled>
                                            <label asp-for="StartDate" class="@(Model?.StartDate!=null?"active":"")">Start Date</label>
                                            <span class="text-danger" asp-validation-for="StartDate"></span>
                                        </div>
                                        <div class="input-field col s3">
                                            <input asp-for="StartHour" class="validate @(Model?.StartHour!=null?"valid":"")" disabled>
                                            <label asp-for="StartHour" class="@(Model?.StartHour!=null?"active":"")">Start Time</label>
                                            <span class="text-danger" asp-validation-for="StartHour"></span>
                                        </div>
                                        <div class="input-field col s6">
                                            <input asp-for="EndHour" class="validate @(Model?.EndHour!=null?"valid":"")" disabled>
                                            <label asp-for="EndHour" class="@(Model?.EndHour!=null?"active":"")">End Time</label>
                                            <span class="text-danger" asp-validation-for="EndHour"></span>
                                        </div>
                                        <div class="input-field col s6">
                                            <select class="form-control form-control-user p-3 validate @(Model?.TeacherIds!=null?"valid":"")" style="height:65%" asp-for="TeacherIds" asp-items="@(new SelectList(ViewBag.Teachers, "Id","FullName"))" disabled>
                                            </select>
                                            <label asp-for="TeacherIds" class="active">Teachers</label>
                                            <span class="text-danger" asp-validation-for="TeacherIds"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 mb-1">
                                    <h3>Are you sure?</h3>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="waves-effect waves-light btn btn-danger" style="width:200px">Delete</button>
                                    <a asp-action="index" class="waves-effect waves-light btn btn-success" style="width:200px">Cancel</a>
                                </div>
                            </div>
                        </form>
                        <div class="clearBoth"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



