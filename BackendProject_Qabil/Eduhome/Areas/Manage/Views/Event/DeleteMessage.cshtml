@model EventMessage
@{
    ViewData["Title"] = "DeleteMessage";
}

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-action">
                        Delete Event Message
                    </div>
                    <div class="card-content">
                        <form class="col s12" method="post">
                            <div class="row">
                                <div class="col s12">
                                    <div class="row m-0">
                                        <div class="input-field col s4">
                                            <input asp-for="Name" class="validate @(Model?.Name!=null?"valid":"")" disabled>
                                            <label asp-for="Name" class="@(Model?.Name!=null?"active":"")">FullName</label>
                                            <span class="text-danger" asp-validation-for="Name"></span>
                                        </div>
                                        <div class="input-field col s6">
                                            <input asp-for="Email" class="validate @(Model?.Email!=null?"valid":"")" disabled>
                                            <label asp-for="Email" class="@(Model?.Email!=null?"active":"")">Email</label>
                                            <span class="text-danger" asp-validation-for="Email"></span>
                                        </div>
                                        <div class="input-field col s2">
                                            <input asp-for="Date" class="validate @(Model?.Date!=null?"valid":"")" disabled>
                                            <label asp-for="Date" class="@(Model?.Date!=null?"active":"")">Create At</label>
                                            <span class="text-danger" asp-validation-for="Date"></span>
                                        </div>
                                        <div class="input-field col s5">
                                            <input asp-for="Subject" class="validate @(Model?.Subject!=null?"valid":"")" disabled>
                                            <label asp-for="Subject" class="@(Model?.Subject!=null?"active":"")">Subject</label>
                                            <span class="text-danger" asp-validation-for="Subject"></span>
                                        </div>
                                        <div class="input-field col s8">
                                            <textarea asp-for="Message" class="validate @(Model?.Message!=null?"valid":"")" disabled></textarea>
                                            <label asp-for="Message" class="@(Model?.Message!=null?"active":"")">Message</label>
                                            <span class="text-danger" asp-validation-for="Message"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 mb-1">
                                    <h3>Are you sure?</h3>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="waves-effect waves-light btn btn-danger" style="width:200px">Delete</button>
                                    <a asp-action="message" asp-route-eventId="@Model.EventId" class="waves-effect waves-light btn btn-success" style="width:200px">Cancel</a>
                                </div>
                            </div>
                        </form>
                        <div class="clearBoth"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





