@model Feature
@{
    ViewData["Title"] = "Edit";
}

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-action">
                        Edit Feature
                    </div>
                    <div class="card-content">
                        <form class="col s12" method="post">
                            <div class="row">
                                <div class="col s12">
                                    <div class="row m-0">
                                        <div class="input-field col s6">
                                            <input asp-for="Title" class="validate @(Model?.Title!=null?"valid":"")">
                                            <label asp-for="Title" class="@(Model?.Title!=null?"active":"")">Notice Text</label>
                                            <span class="text-danger" asp-validation-for="Title"></span>
                                        </div>
                                        <div class="input-field col s9">
                                            <textarea asp-for="Desc" class="validate @(Model?.Desc!=null?"valid":"")"></textarea>
                                            <label asp-for="Desc" class="@(Model?.Desc!=null?"active":"")">Description</label>
                                            <span class="text-danger" asp-validation-for="Desc"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="waves-effect waves-light btn btn-success" style="width:200px">Edit</button>
                        </form>
                        <div class="clearBoth"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

