@model List<Notice>
@{
    ViewData["Title"] = "Index";
}

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-action">
                        Notices Table
                        <div class="create-div d-flex j-c-fe">
                            <a asp-action="create" class="btn btn-success">Create Notice</a>
                        </div>
                    </div>
                    <div class="card-content">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Create At</th>
                                        <th>Text</th>
                                        <th>Button</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Notice nt in Model)
                                    {
                                    <tr>
                                        <td>@nt.CreatAt.ToString("dd.MM.yyyy")</td>
                                        <td>@nt.Text</td>
                                        <td>
                                            <a asp-action="edit" asp-route-id="@nt.Id" class="btn btn-warning w-100 mb-1">Edit</a>
                                            <a asp-action="delete" asp-route-id="@nt.Id" class="btn btn-danger w-100">Delete</a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

