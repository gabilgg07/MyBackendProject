@model Slider
@{
    ViewData["Title"] = "Delete";
}

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-lg-9">
                <div class="card">
                    <div class="card-action">
                        Delete Slider
                    </div>
                    <div class="card-content">
                        <form class="col s12" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col s12">
                                    <div class="row">
                                        <div class="col-md-6 col-sm-6">
                                            <div class="card p-1">
                                                <div class="image-poster">
                                                    @if (Model?.Image != null)
                                                    {
                                                        <div class="image-wrapper" style="position:relative">
                                                            <img style="width:100%" src="~/uploads/sliders/@Model.Image" />
                                                            <input type="hidden" name="Image" value="@Model.Image" />
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <h3 class="mt-2">Have not image</h3>
                                                    }

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row m-0">
                                        <div class="input-field col s6">
                                            <input asp-for="Title" class="validate @(Model?.Title!=null?"valid":"")" disabled>
                                            <label asp-for="Title" class="@(Model?.Title!=null?"active":"")">Title</label>
                                            <span class="text-danger" asp-validation-for="Title"></span>
                                        </div>
                                        <div class="input-field col s6">
                                            <input asp-for="Subtitle" class="validate @(Model?.Subtitle!=null?"valid":"")" disabled>
                                            <label asp-for="Subtitle" class="@(Model?.Subtitle!=null?"active":"")">Subtitle</label>
                                            <span class="text-danger" asp-validation-for="Subtitle"></span>
                                        </div>
                                        <div class="input-field col s12">
                                            <textarea asp-for="Desc" class="validate @(Model?.Desc!=null?"valid":"")" disabled></textarea>
                                            <label asp-for="Desc" class="@(Model?.Desc!=null?"active":"")">Description</label>
                                            <span class="text-danger" asp-validation-for="Desc"></span>

                                        </div>
                                        <div class="input-field col s4">
                                            <input asp-for="Order" class="validate @(Model?.Order!=null?"valid":"")" disabled>
                                            <label asp-for="Order" class="@(Model?.Order!=null?"active":"")">Order</label>
                                            <span class="text-danger" asp-validation-for="Order"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 mb-1">
                                    <h3>Are you sure?</h3>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="waves-effect waves-light btn btn-danger" style="width:200px">Delete</button>
                                    <a asp-action="index" class="waves-effect waves-light btn btn-success" style="width:200px">Cancel</a>
                                </div>
                            </div>
                        </form>
                        <div class="clearBoth"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

