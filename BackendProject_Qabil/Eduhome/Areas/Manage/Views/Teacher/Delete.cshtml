@model Teacher
@{
    ViewData["Title"] = "Delete";
}

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-lg-9">
                <div class="card">
                    <div class="card-action">
                        Delete Teacher
                    </div>
                    <div class="card-content">
                        <form class="col s12" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col s12">
                                    <div class="row">
                                        <div class="col-md-6 col-sm-6">
                                            <div class="card p-1">
                                                <div class="image-poster">
                                                    @if (Model?.Image != null)
                                                    {
                                                        <div class="image-wrapper" style="position:relative">
                                                            <img style="width:100%" src="~/uploads/teachers/@Model.Image" />
                                                            <input type="hidden" name="Image" value="@Model.Image" />
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <h3 class="mt-2">Have not image</h3>
                                                    }

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row m-0">
                                        <div class="input-field col s6">
                                            <input asp-for="FullName" class="validate @(Model?.FullName!=null?"valid":"")" disabled>
                                            <label asp-for="FullName" class="@(Model?.FullName!=null?"active":"")">FullName</label>
                                            <span class="text-danger" asp-validation-for="FullName"></span>
                                        </div>
                                        <div class="input-field col s6">
                                            <input asp-for="Position" class="validate @(Model?.Position!=null?"valid":"")" disabled>
                                            <label asp-for="Position" class="@(Model?.Position!=null?"active":"")">Position</label>
                                            <span class="text-danger" asp-validation-for="Position"></span>
                                        </div>
                                        <div class="input-field col s6">
                                            <input asp-for="Degree" class="validate @(Model?.Degree!=null?"valid":"")" disabled>
                                            <label asp-for="Degree" class="@(Model?.Degree!=null?"active":"")">Degree</label>
                                            <span class="text-danger" asp-validation-for="Degree"></span>
                                        </div>
                                        <div class="input-field col s3">
                                            <input asp-for="Experience" class="validate @(Model?.Experience!=null?"valid":"")" disabled>
                                            <label asp-for="Experience" class="@(Model?.Experience!=null?"active":"")">Experience</label>
                                            <span class="text-danger" asp-validation-for="Experience"></span>
                                        </div>
                                        <div class="input-field col s12">
                                            <textarea asp-for="About" class="validate @(Model?.About!=null?"valid":"")" disabled></textarea>
                                            <label asp-for="About" class="@(Model?.About!=null?"active":"")">About</label>
                                            <span class="text-danger" asp-validation-for="About"></span>
                                        </div>
                                        <div class="col s10 mb-1">
                                            <div id="skills">
                                                @if (Model.TeacherSkills != null)
                                                {
                                                    int count = 0;
                                                    @foreach (var item in Model.TeacherSkills)
                                                    {
                                                        <div class="form-row">
                                                            <div class="input-field col s6">
                                                                <input name="TeacherSkills[@count].Name" class="validate valid" value="@item.Name" disabled>
                                                                <label for="TeacherSkills[@count].Name" class="active">Skill Name</label>
                                                                <span class="text-danger" asp-validation-for="TeacherSkills[0].Name"></span>
                                                            </div>
                                                            <div class="input-field col s3">
                                                                <input name="TeacherSkills[@count].Value" class="validate valid" value="@item.Value" disabled>
                                                                <label for="TeacherSkills[@count].Value" class="active">Skill Value</label>
                                                                <span class="text-danger" asp-validation-for="TeacherSkills[0].Value"></span>
                                                            </div>
                                                        </div>
                                                        count++;
                                                    }
                                                }
                                            </div>
                                        </div>
                                        <div class="input-field col s6">
                                            <input asp-for="Email" class="validate @(Model?.Email!=null?"valid":"")" disabled>
                                            <label asp-for="Email" class="@(Model?.Email!=null?"active":"")">E-mail</label>
                                            <span class="text-danger" asp-validation-for="Email"></span>
                                        </div>
                                        <div class="input-field col s6">
                                            <input asp-for="Phone" class="validate @(Model?.Phone!=null?"valid":"")" disabled>
                                            <label asp-for="Phone" class="@(Model?.Phone!=null?"active":"")">Phone</label>
                                            <span class="text-danger" asp-validation-for="Phone"></span>
                                        </div>
                                        <div class="input-field col s6">
                                            <input asp-for="Skype" class="validate @(Model?.Skype!=null?"valid":"")" disabled>
                                            <label asp-for="Skype" class="@(Model?.Skype!=null?"active":"")">Skype</label>
                                            <span class="text-danger" asp-validation-for="Skype"></span>
                                        </div>
                                        <div class="input-field col s6">
                                            <input asp-for="Fb" class="validate @(Model?.Fb!=null?"valid":"")" disabled>
                                            <label asp-for="Fb" class="@(Model?.Fb!=null?"active":"")">Facebook</label>
                                            <span class="text-danger" asp-validation-for="Fb"></span>
                                        </div>
                                        <div class="input-field col s6">
                                            <input asp-for="Pint" class="validate @(Model?.Pint!=null?"valid":"")" disabled>
                                            <label asp-for="Pint" class="@(Model?.Pint!=null?"active":"")">Pinterest</label>
                                            <span class="text-danger" asp-validation-for="Pint"></span>
                                        </div>
                                        <div class="input-field col s6">
                                            <input asp-for="Vimeo" class="validate @(Model?.Vimeo!=null?"valid":"")" disabled>
                                            <label asp-for="Vimeo" class="@(Model?.Vimeo!=null?"active":"")">Vimeo</label>
                                            <span class="text-danger" asp-validation-for="Vimeo"></span>
                                        </div>
                                        <div class="input-field col s6">
                                            <input asp-for="Twit" class="validate @(Model?.Twit!=null?"valid":"")" disabled>
                                            <label asp-for="Twit" class="@(Model?.Twit!=null?"active":"")">Twitter</label>
                                            <span class="text-danger" asp-validation-for="Twit"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 mb-1">
                                    <h3>Are you sure?</h3>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="waves-effect waves-light btn btn-danger" style="width:200px">Delete</button>
                                    <a asp-action="index" class="waves-effect waves-light btn btn-success" style="width:200px">Cancel</a>
                                </div>
                            </div>
                        </form>
                        <div class="clearBoth"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


