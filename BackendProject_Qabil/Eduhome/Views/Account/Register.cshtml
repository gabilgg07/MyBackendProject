@model UserRegisterM
@{
    ViewData["Title"] = "Register";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>Sign up</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Register start -->
<div class="register-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>Register</h2>
                        </div>
                        <div class="login-form">
                            <form method="post" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-md-6 col-12">
                                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                        <input asp-for="FullName" placeholder="FullName">
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                        <input asp-for="Email" placeholder="Email">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                        <input asp-for="UserName" placeholder="Username">
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                        <input asp-for="Password" placeholder="Password">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                        <input asp-for="ConfirmPassword" placeholder="Confirm Password">
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="edit-profil-image">
                                            <div class="image">
                                                <img id="profilImg" style="width:100%" src="~/img/icon/red-profil.jpg" />
                                            </div>
                                            <div class="register-input">
                                                <div class="mb-3">
                                                    <label asp-for="ImageFile" class="form-label mt-4 mb-0">Choose File for Change Profil Image</label>
                                                    <input class="form-control form-control-lg mt-2" type="file" asp-for="ImageFile" style="line-height:26px">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="button-box">
                                            <button type="submit" class="default-btn mt-3">Sign Up</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register end -->


